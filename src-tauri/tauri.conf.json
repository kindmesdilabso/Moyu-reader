{
  "$schema": "https://tauri.app/schemas/tauri.conf.json",
  "identifier": "com.moyu.reader",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev"
  },
  "app": {
    "windows": [
      {
        "title": "Moyu Reader",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "app", "msi"],
    "windows": {
      "wix": {
        "language": "zh-CN"
      }
    }
  }
}
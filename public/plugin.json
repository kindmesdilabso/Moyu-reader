{
  "main": "index.html",
  "preload": "preload.js",
  "logo": "logo.png",
  "pluginSetting": {
    "single": false
  },
  "features": [
      {
        "code": "secret-reader",
        "explain": "摸鱼阅读神器",
        "cmds": [
          "read",
          "xiaoshuo",
          "xs",
          "摸鱼阅读",
          {
            "type": "files",
            "label": "添加书籍",
            "fileType": "file",
            "match": "/^.{1,}.[tT][xX][tT]/",
            "minLength": 1,
            "maxLength": 1
          }
        ]
      },
      {
        "code": "close-reader",
        "explain": "关闭摸鱼阅读器",
        "cmds": [
          "close-fish-book"
        ]
      },
      {
        "code": "toggle-reader",
        "explain": "隐藏/显示摸鱼阅读器",
        "cmds": [
          "toggle-show-fish-book"
        ]
      }
  ]
}